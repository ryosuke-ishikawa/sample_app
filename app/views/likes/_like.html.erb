<% unless current_user == micropost.user %>
 <% if current_user.already_liked?(micropost) %>
    <%= button_to like_path(micropost, format: :js), method: :delete, remote: true do %>
      <%= image_tag("icon_red_heart.png") %>
      <span>
        <%= micropost.likes_count %>
      </span>
    <% end %>
 <% else %>
    <%= button_to likes_path(micropost_id: micropost, format: :js), method: :post, remote: true do %>
     <%= image_tag("icon_heart.png") %>
     <span>
         <%= micropost.likes_count %>
     </span>
    <% end %>
 <% end %>
<% end %>



